{
  "manifest_version": 3,
  "name": "Ethio Shield ",
  "version": "0.1.0",
  "description": "Flags pages with Amharic/English phishing cues and suspicious URLs.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["<all_urls>"]
}
