{
  "manifest_version": 3,
  "name": "PhishShield (Amharic-first)",
  "version": "0.2.0",
  "description": "Flags pages with Amharic/English phishing cues and suspicious URLs. Popup shows reports.",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "PhishShield",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}

